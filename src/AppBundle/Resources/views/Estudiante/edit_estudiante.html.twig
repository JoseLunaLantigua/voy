{% extends 'base.html.twig' %}

{% block body %}
    <h1>Edit User</h1>


    <form>

        {# Input oculto para mantener el ID del Usuario #}
        <input type="hidden" value="{estudiante.id}">


        <div class="form-group">
            <label for="name">Nombre</label>
            <input type="text"  class="form-control" id="nombre" placeholder="nombre" value="{{estudiante.nombre}}">
        </div>

        <div class="form-group">
            <label for="edad">Edad</label>
            <input type="edad" class="form-control" id="email" placeholder="Email" value="{{estudiante.edad }}">
        </div>


        <button type="button" id="addUser" class="btn btn-default">Update User</button>
    </form>



{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>


        function  addUser(estudiante) {

            $.ajax({
                type: "POST",
                data: JSON.stringify(estudiante),
                url: "http://voy/app_dev.php/estudiante/",
                error: function() {

                },
                success: function (estudiante) {
                    console.log(estudiante);
                }
            });

        }

        $(document).ready(function () {

            $('#addUser').click(function () {

                var nombre = $('#nombre').val();
                var edad = $('#edad').val();

                //  alert(name+", "+email);

                addUser({ nombre : nombre, edad: edad});

            });


        });
    </script>


{% endblock %}

